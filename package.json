{
  "name": "theater-chat",
  "version": "0.1.1",
  "description": "Interactive terminal chat interface for Theater actor system with AI and MCP tool integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "author": "Colin Rozzi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/colinrozzi/theater-chat.git"
  },
  "homepage": "https://github.com/colinrozzi/theater-chat#readme",
  "bugs": {
    "url": "https://github.com/colinrozzi/theater-chat/issues"
  },
  "bin": {
    "theater-chat": "./dist/index.js"
  },
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "bun dist/index.js",
    "dev": "bun --watch src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev:build": "concurrently \"tsc --watch\" \"bun --watch dist/index.js\"",
    "test": "echo 'No tests yet'",
    "prepublishOnly": "bun run build",
    "install-deps": "bun install",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "ink": "^4.4.1",
    "ink-text-input": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "react": "^18.2.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "uuid": "^9.0.1",
    "theater-client": "^0.1.1",
    "terminal-chat-ui": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "theater",
    "chat",
    "cli",
    "ai",
    "terminal",
    "actor",
    "mcp",
    "interactive"
  ]
}
